<configuration>
	
  <appender name="fout" class="ch.qos.logback.core.FileAppender">
    <file>${CATALINA_HOME}/logs/ejournal.log</file>
    <append>false</append>
    <encoder>      
      <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %m%n</pattern>
    </encoder>
  </appender> 
   
  <root level="INFO">
    <appender-ref ref="fout" />
  </root>
  
</configuration>